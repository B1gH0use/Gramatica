package PackageGUI;

import java.awt.Font;
import javax.swing.JButton;
import javax.swing.JDialog;
import javax.swing.JLabel;
import javax.swing.JTable;
import javax.swing.JTextField;
import javax.swing.table.DefaultTableModel;

@SuppressWarnings("serial")
public class windowMain extends JDialog{

	private JLabel lblGramatica =  new JLabel();
	private JTextField txfGramatica = new JTextField();
	private JButton btnRandom = new JButton();
	private JTable tbTable = new JTable();	
	DefaultTableModel model = new DefaultTableModel();
	
	public windowMain() {
		setTitle("Derivação Gramatical");
		setModal(true);
		setDefaultCloseOperation(DISPOSE_ON_CLOSE);
		setLayout(null);
		setSize(500, 450);
		setResizable(false);
		setLocationRelativeTo(null);
		buildWindows();
		actionsButtons();
		
	}
	
	private void buildWindows() {
		lblGramatica = new JLabel("Insira a gramatica");
		lblGramatica.setBounds(10, 20, 200, 25);
		lblGramatica.setFont(new Font(Font.MONOSPACED, Font.BOLD, 12));
		getContentPane().add(lblGramatica);
		
		txfGramatica = new JTextField();
		txfGramatica.setBounds(150, 20, 200, 25);
		txfGramatica.setFont(new Font(Font.MONOSPACED, Font.BOLD, 12));
		getContentPane().add(txfGramatica);
		
		btnRandom = new JButton("Aleatório");
		btnRandom.setBounds(380, 20, 100, 24);
		btnRandom.setFont(new Font(Font.MONOSPACED, Font.BOLD, 12));
		getContentPane().add(btnRandom);
		
		tbTable = new JTable();
		tbTable.setBounds(10, 80, 475, 335);
		tbTable.setFont(new Font(Font.MONOSPACED, Font.BOLD, 12));
		tbTable.setModel(model);
		model.addColumn("Resultados");
		getContentPane().add(tbTable);
	}
	
	private void actionsButtons() {
		
	}
	
}
