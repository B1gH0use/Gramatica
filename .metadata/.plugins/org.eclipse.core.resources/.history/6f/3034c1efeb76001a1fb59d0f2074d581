		btnRandom.setBounds(380, 20, 100, 24);
		btnRandom.setFont(new Font(Font.MONOSPACED, Font.BOLD, 12));
		getContentPane().add(btnRandom);
		
		tbTable = new JTable();
		tbTable.setBounds(10, 80, 475, 335);
		tbTable.setFont(new Font(Font.MONOSPACED, Font.BOLD, 12));
